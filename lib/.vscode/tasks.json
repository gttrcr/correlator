{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/dev/correlator",
                //"-O3",
                "-std=c++17",
                "-Wall",
                "-Wpedantic",
                //"-Werror",
                "-L${workspaceFolder}/dev",
                "-l:libkissfft-float.so",
                "-ltbb",
                "-DTHREAD_SUPPORT"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}